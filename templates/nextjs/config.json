{
  "name": "Next.js",
  "description": "The React framework for the web - Full-stack with App Router, Server Components, and API Routes",
  "icon": "‚ñ≤",
  "type": "nextjs",
  "category": "Full-Stack Framework",

  "install": {
    "command": "npx create-next-app@latest . --ts --tailwind --eslint --app --src-dir --import-alias '@/*' --use-npm",
    "requirements": ["node"],
    "checkCommand": "node --version",
    "timeout": 300000
  },

  "versions": {
    "node": {
      "default": "20",
      "options": ["22", "20", "18"],
      "labels": {
        "22": "Node.js 22 (Latest)",
        "20": "Node.js 20 LTS (Recommended)",
        "18": "Node.js 18 LTS"
      }
    },
    "nextjs": {
      "default": "15",
      "options": ["15", "14", "13"],
      "labels": {
        "15": "Next.js 15 (Latest)",
        "14": "Next.js 14 (Stable)",
        "13": "Next.js 13"
      }
    }
  },

  "packageManagers": {
    "npm": {
      "required": true,
      "description": "Node package manager"
    },
    "bun": {
      "required": false,
      "default": false,
      "description": "Fast JavaScript runtime & package manager"
    },
    "pnpm": {
      "required": false,
      "default": true,
      "description": "Fast, disk space efficient package manager"
    },
    "yarn": {
      "required": false,
      "default": false,
      "description": "Yarn package manager"
    }
  },

  "services": {
    "nginx": {
      "required": true,
      "description": "Reverse proxy for production",
      "icon": "üåê"
    },
    "postgresql": {
      "required": false,
      "default": true,
      "description": "PostgreSQL database server",
      "defaultPort": 5432,
      "icon": "üêò"
    },
    "redis": {
      "required": false,
      "default": true,
      "description": "In-memory data structure store",
      "defaultPort": 6379,
      "icon": "‚ö°"
    },
    "adminer": {
      "required": false,
      "default": false,
      "description": "Database administration tool",
      "defaultPort": 8080,
      "icon": "üóÉÔ∏è",
      "depends": ["postgresql"]
    },
    "mailhog": {
      "required": false,
      "default": false,
      "description": "Email testing tool",
      "defaultPort": 8025,
      "icon": "üìß"
    }
  },

  "ports": {
    "app": {
      "default": 3000,
      "description": "Main application port"
    }
  },

  "options": {
    "appRouter": {
      "default": true,
      "description": "Use the new App Router (recommended)"
    },
    "srcDir": {
      "default": true,
      "description": "Use src/ directory"
    },
    "typescript": {
      "default": true,
      "description": "Use TypeScript"
    },
    "tailwind": {
      "default": true,
      "description": "Include Tailwind CSS"
    },
    "eslint": {
      "default": true,
      "description": "Include ESLint"
    }
  },

  "commands": {
    "install": "npx create-next-app@latest . --ts --tailwind --eslint --app --src-dir --import-alias '@/*' --use-npm",
    "setup": [],
    "dev": "npm run dev",
    "build": "npm run build",
    "start": "npm run start"
  },

  "stubs": [
    "docker-compose.yml.stub",
    "Dockerfile.stub",
    "nginx.conf.stub",
    ".env.stub",
    "Makefile.stub"
  ],

  "environment": {
    "NODE_ENV": "development",
    "NEXT_TELEMETRY_DISABLED": "1",
    "DATABASE_URL": "postgresql://postgres:password@db:5432/{{PROJECT_NAME}}",
    "REDIS_URL": "redis://redis:6379"
  },

  "commonCommands": [
    {
      "name": "dev",
      "command": "npm run dev",
      "description": "Start development server",
      "category": "Development"
    },
    {
      "name": "build",
      "command": "npm run build",
      "description": "Build for production",
      "category": "Build"
    },
    {
      "name": "start",
      "command": "npm run start",
      "description": "Start production server",
      "category": "Production"
    },
    {
      "name": "lint",
      "command": "npm run lint",
      "description": "Run ESLint",
      "category": "Debug"
    },
    {
      "name": "prisma generate",
      "command": "npx prisma generate",
      "description": "Generate Prisma client",
      "category": "Database"
    },
    {
      "name": "prisma migrate",
      "command": "npx prisma migrate dev",
      "description": "Run database migrations",
      "category": "Database"
    },
    {
      "name": "prisma studio",
      "command": "npx prisma studio",
      "description": "Open Prisma Studio",
      "category": "Database"
    },
    {
      "name": "add shadcn",
      "command": "npx shadcn@latest add",
      "description": "Add shadcn/ui component",
      "category": "Setup",
      "prompt": "Component name:"
    }
  ]
}
